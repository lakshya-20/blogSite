<!DOCTYPE html>
<html lang="en">
    <head>    
        <title>Dashboard</title>
        <meta charset="UTF-8">
        <link rel='stylesheet' href='/stylesheets/dashboard.css' />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"-->
    crossorigin="anonymous">
    </head>
    <% include partials/nav.ejs %>
    <body>
        
        
         <div id="body">
            <ul id="blogs" style="list-style-type:decimal;">
            <% files.forEach(function(file){%>
                <div id="blog">
                <li>
                <span id="title"><%=file.title%></span>
                <span id="author">Author <a href="/profile"><%=file.author%></a></span>
                <% var noOfLikes=0;file.likes.forEach(function(like){
                  noOfLikes+=1;
                })%>
                <br>
                <br>
                <span id="likes">Likes <%=noOfLikes%></span>
                <br>
                <form method="POST" action="/blog/blog/<%= file._id%>/like">
                  <button type="submit" class="button" id="like"><img src="/images/like.png" style="width: 30px;"></button>
                </form>
                
                <br>
                <span id="header"><%=file.header%></span>
                
                <span id="body"><%=file.body%></span>
                <br>
                
                </li><div class="message-wrapper">
                  <h2>Ready to become an awesome blogger?</h2>
                  <h3>Let's signup and learn to be creative!</h3>
                  <div class="bottom-wrapper">
                      <a href="" class="btn email">Sign up</a>
                  </div>
              </div>
                </div>
            <%})%>
        </ul>
        </div>
     
    </body>
    <script src="/javascripts/dashboard.js">
        
        </script>
</html>